<Window x:Class="BloodDonationSupportSystem.UpdateProcessDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cập nhật quy trình lấy máu" Height="300" Width="350" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid Background="#f5f6fa">
        <Border CornerRadius="12" Background="White" Padding="24" Margin="18">
            <StackPanel>
                <TextBlock Text="Cập nhật quy trình lấy máu" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,18"/>
                <TextBlock Text="Trạng thái blood test"/>
                <TextBox x:Name="BloodTestTextBox" Height="28" Margin="0,0,0,10"/>
                <TextBlock Text="Mã nhóm máu"/>
                <TextBox x:Name="BloodTypeIdTextBox" Height="28" Margin="0,0,0,18"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Lưu" Width="80" Height="32" Click="SaveButton_Click"/>
                    <Button Content="Quay lại" Width="80" Height="32" Click="CancelButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window> 