<Window x:Class="BloodDonationSupportSystem.ManageSchedulesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lí lịch hiến máu" Height="400" Width="700" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Background="#f5f6fa" Margin="10">
        <StackPanel>
            <TextBlock Text="Quản lí lịch hiến máu" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,18"/>
            <ListView x:Name="ScheduleListView" Height="220" Margin="0,0,0,12">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Bệnh viện" Width="180" DisplayMemberBinding="{Binding AddressHospital}"/>
                        <GridViewColumn Header="Ngày" Width="90" DisplayMemberBinding="{Binding DonationDate}"/>
                        <GridViewColumn Header="Bắt đầu" Width="70" DisplayMemberBinding="{Binding StartTime}"/>
                        <GridViewColumn Header="Kết thúc" Width="70" DisplayMemberBinding="{Binding EndTime}"/>
                        <GridViewColumn Header="Đã đăng ký" Width="80" DisplayMemberBinding="{Binding AmountRegistration}"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <Button Content="Thêm lịch mới" Width="140" Height="36" HorizontalAlignment="Center" Click="AddScheduleButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 