<Window x:Class="BloodDonationSupportSystem.AccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông tin tài khoản" Height="370" Width="380" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid Background="#f5f6fa">
        <Border CornerRadius="14" Background="White" Padding="28" Width="300" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Thông tin tài khoản" FontSize="20" FontWeight="Bold" Foreground="#2d3436" HorizontalAlignment="Center" Margin="0,0,0,18"/>
                <TextBlock Text="Họ tên" FontSize="13"/>
                <TextBlock x:Name="FullNameText" FontSize="15" Margin="0,0,0,10"/>
                <TextBlock Text="Số điện thoại" FontSize="13"/>
                <TextBlock x:Name="PhoneNumberText" FontSize="15" Margin="0,0,0,10"/>
                <TextBlock Text="Địa chỉ" FontSize="13"/>
                <TextBlock x:Name="AddressText" FontSize="15" Margin="0,0,0,10"/>
                <TextBlock Text="Ngày sinh" FontSize="13"/>
                <TextBlock x:Name="DateOfBirthText" FontSize="15" Margin="0,0,0,18"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                    <Button Content="Cập nhật" Width="80" Height="32" Click="UpdateButton_Click" Background="#0984e3" Foreground="White" FontWeight="Bold"/>
                    <Button Content="Quay lại" Width="80" Height="32" Click="BackButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window> 