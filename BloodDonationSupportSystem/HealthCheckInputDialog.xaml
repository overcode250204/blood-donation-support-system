<Window x:Class="BloodDonationSupportSystem.HealthCheckInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nhập thông tin kiểm tra sức khỏe" Height="400" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid Background="#f5f6fa">
        <Border CornerRadius="12" Background="White" Padding="24" Margin="18">
            <StackPanel>
                <TextBlock Text="Nhập thông tin kiểm tra sức khỏe" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,18"/>
                <TextBlock Text="Chiều cao (cm)"/>
                <TextBox x:Name="HeightTextBox" Height="28" Margin="0,0,0,10"/>
                <TextBlock Text="Cân nặng (kg)"/>
                <TextBox x:Name="WeightTextBox" Height="28" Margin="0,0,0,10"/>
                <TextBlock Text="Tình trạng sức khỏe"/>
                <TextBox x:Name="HealthStatusTextBox" Height="28" Margin="0,0,0,10"/>
                <TextBlock Text="Ghi chú"/>
                <TextBox x:Name="NoteTextBox" Height="28" Margin="0,0,0,18"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Lưu" Width="80" Height="32" Click="SaveButton_Click"/>
                    <Button Content="Quay lại" Width="80" Height="32" Click="CancelButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window> 