<Window x:Class="BloodDonationSupportSystem.Dashboard.CreateAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="TẠO TÀI KHOẢN MỚI" 
        Height="550" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI" 
        Background="#F5F7FA"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="0 5 0 10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="0 5 0 10"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1E3A8A"/>
            <Setter Property="Margin" Value="0 5 0 0"/>
        </Style>
        
        <Style TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="10 0 0 0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 15">
            <TextBlock Text="TẠO TÀI KHOẢN MỚI" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="#0B3D91"/>
        </StackPanel>

        <!-- Form Fields -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Full Name -->
                <Label Content="Họ và tên*"/>
                <TextBox x:Name="txtFullName"/>
                
                <!-- Phone Number -->
                <Label Content="Số điện thoại*"/>
                <TextBox x:Name="txtPhoneNumber"/>
                
                <!-- Address -->
                <Label Content="Địa chỉ"/>
                <TextBox x:Name="txtAddress"/>
                
                <!-- Date of Birth -->
                <Label Content="Ngày sinh"/>
                <DatePicker x:Name="dpDateOfBirth" 
                            SelectedDateFormat="Short"
                            Height="32"
                            Margin="0 5 0 10"/>
                
                <!-- Gender -->
                <Label Content="Giới tính"/>
                <ComboBox x:Name="cbGender" SelectedIndex="0">
                    <sys:String>Nam</sys:String>
                    <sys:String>Nữ</sys:String>
                    <sys:String>Khác</sys:String>
                </ComboBox>
                
                <!-- Blood Type -->
                <Label Content="Nhóm máu"/>
                <ComboBox x:Name="cbBloodType" SelectedIndex="0">
                    <sys:String>A+</sys:String>
                    <sys:String>A-</sys:String>
                    <sys:String>B+</sys:String>
                    <sys:String>B-</sys:String>
                    <sys:String>AB+</sys:String>
                    <sys:String>AB-</sys:String>
                    <sys:String>O+</sys:String>
                    <sys:String>O-</sys:String>
                </ComboBox>
                
                <!-- Role -->
                <Label Content="Vai trò*"/>
                <ComboBox x:Name="cbRole" 
                          DisplayMemberPath="RoleName"
                          SelectedValuePath="RoleId"/>
                
                <!-- Status -->
                <Label Content="Trạng thái"/>
                <ComboBox x:Name="cbStatus" SelectedIndex="0">
                    <sys:String>HOẠT ĐỘNG</sys:String>
                    <sys:String>NGỪNG HOẠT ĐỘNG</sys:String>
                </ComboBox>
                
                <!-- Username -->
                <Label Content="Tên đăng nhập*"/>
                <TextBox x:Name="txtUsername"/>
                
                <!-- Password -->
                <Label Content="Mật khẩu*"/>
                <PasswordBox x:Name="txtPassword" Margin="0 5 0 10"/>
                
                <!-- Confirm Password -->
                <Label Content="Xác nhận mật khẩu*"/>
                <PasswordBox x:Name="txtConfirmPassword" Margin="0 5 0 15"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="HỦY BỎ" 
                    Click="CancelButton_Click"
                    Background="#6B7280"
                    Foreground="White"/>
            
            <Button Content="TẠO TÀI KHOẢN" 
                    Click="CreateButton_Click"
                    Background="#0B3D91"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>