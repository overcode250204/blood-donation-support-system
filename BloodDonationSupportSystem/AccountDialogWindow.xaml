<Window x:Class="BloodDonationSupportSystem.AccountDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cập nhật tài khoản" Height="400" Width="380" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid Background="#f5f6fa">
        <Border CornerRadius="14" Background="White" Padding="28" Width="300" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Cập nhật tài khoản" FontSize="20" FontWeight="Bold" Foreground="#2d3436" HorizontalAlignment="Center" Margin="0,0,0,18"/>
                <TextBlock Text="Họ tên" FontSize="13"/>
                <TextBox x:Name="FullNameTextBox" Height="28" Margin="0,0,0,10"/>
                <TextBlock Text="Số điện thoại" FontSize="13"/>
                <TextBox x:Name="PhoneNumberTextBox" Height="28" Margin="0,0,0,10" IsReadOnly="True"/>
                <TextBlock Text="Địa chỉ" FontSize="13"/>
                <TextBox x:Name="AddressTextBox" Height="28" Margin="0,0,0,10"/>
                <TextBlock Text="Ngày sinh" FontSize="13"/>
                <DatePicker x:Name="DateOfBirthPicker" Height="28" Margin="0,0,0,18"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                    <Button Content="Lưu" Width="80" Height="32" Click="SaveButton_Click" Background="#0984e3" Foreground="White" FontWeight="Bold"/>
                    <Button Content="Hủy" Width="80" Height="32" Click="CancelButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window> 