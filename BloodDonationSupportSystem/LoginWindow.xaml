<Window x:Class="BloodDonationSupportSystem.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng nhập" Height="380" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#f5f6fa">
        <Border CornerRadius="16" Background="White" Padding="32" Width="320" VerticalAlignment="Center" HorizontalAlignment="Center"  >
            <StackPanel>
                <TextBlock Text="ĐĂNG NHẬP" FontSize="26" FontWeight="Bold" Foreground="#2d3436" HorizontalAlignment="Center" Margin="0,0,0,24"/>
                <TextBlock Text="Số điện thoại" FontSize="14" Margin="0,0,0,4"/>
                <TextBox x:Name="PhoneNumberTextBox" Height="32" Margin="0,0,0,16" FontSize="15"/>
                <TextBlock Text="Mật khẩu" FontSize="14" Margin="0,0,0,4"/>
                <Grid>
                    <PasswordBox x:Name="PasswordBox" Height="32" FontSize="15"/>
                    <TextBlock Text="🔒" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,8,0"/>
                </Grid>
                <Button x:Name="LoginButton" Content="Đăng nhập" Height="38" Margin="0,24,0,0" Click="LoginButton_Click"
                        Background="#0984e3" Foreground="White" FontWeight="Bold" FontSize="16" BorderThickness="0" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window> 