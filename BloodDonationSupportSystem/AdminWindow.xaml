<Window x:Class="BloodDonationSupportSystem.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Window" Height="260" Width="400"
        Background="#E8F0FE"
        FontFamily="Segoe UI"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <TextBlock Text="Welcome, Admin!" 
                       FontSize="26" FontWeight="Bold" 
                       Foreground="#0B3D91" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,25"/>

            <Button Content="Dashboard" 
                    Width="150" Height="40" 
                    Background="#0B3D91" 
                    Foreground="White" 
                    FontWeight="SemiBold" 
                    Margin="0,0,0,15"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="DashboardButton_Click">
                <Button.Effect>
                    <DropShadowEffect Color="#224e91" BlurRadius="5" ShadowDepth="1"/>
                </Button.Effect>
            </Button>

            <Button Content="Quản lí tài khoản"
                    Width="150" Height="40"
                    Background="#2C7A7B"  
                Foreground="White"
                    FontWeight="SemiBold"
                    Margin="0,0,0,15"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="AccountManagementButton_Click">
                <Button.Effect>
                    <DropShadowEffect Color="#255C5D" BlurRadius="5" ShadowDepth="1"/>
                </Button.Effect>
            </Button>

            <Button Content="Đăng xuất" 
                    Width="150" Height="40" 
                    Background="#C53030" 
                    Foreground="White" 
                    FontWeight="SemiBold" 
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="LogoutButton_Click">
                <Button.Effect>
                    <DropShadowEffect Color="#a52a2a" BlurRadius="5" ShadowDepth="1"/>
                </Button.Effect>
            </Button>
        </StackPanel>
    </Grid>
</Window>
