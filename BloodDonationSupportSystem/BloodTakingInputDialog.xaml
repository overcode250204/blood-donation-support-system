<Window x:Class="BloodDonationSupportSystem.BloodTakingInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nhập thông tin lấy máu" Height="340" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid Background="#f5f6fa">
        <Border CornerRadius="12" Background="White" Padding="24" Margin="18">
            <StackPanel>
                <TextBlock Text="Nhập thông tin lấy máu" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,18"/>
                <TextBlock Text="Kết quả xét nghiệm máu"/>
                <TextBox x:Name="BloodTestTextBox" Height="28" Margin="0,0,0,10"/>
                <TextBlock Text="Thể tích (ml)"/>
                <TextBox x:Name="VolumeTextBox" Height="28" Margin="0,0,0,10"/>
                <TextBlock Text="Trạng thái"/>
                <TextBox x:Name="StatusTextBox" Height="28" Margin="0,0,0,10" IsReadOnly="True"/>
                <TextBlock Text="Mã nhóm máu"/>
                <TextBox x:Name="BloodTypeIdTextBox" Height="28" Margin="0,0,0,18"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Lưu" Width="80" Height="32" Click="SaveButton_Click"/>
                    <Button Content="Quay lại" Width="80" Height="32" Click="CancelButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window> 