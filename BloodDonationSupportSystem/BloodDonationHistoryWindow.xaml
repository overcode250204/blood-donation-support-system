<Window x:Class="BloodDonationSupportSystem.BloodDonationHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lịch sử đăng ký hiến máu" Height="520" Width="700" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Background="#f5f6fa">
        <Border CornerRadius="12" Background="White" Padding="18" Margin="18">
            <StackPanel>
                <TextBlock Text="Lịch sử đăng ký hiến máu" FontSize="20" FontWeight="Bold" Foreground="#2d3436" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                <ListView x:Name="HistoryListView" Height="260" SelectionMode="Single" Margin="0,0,0,12">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Bệnh viện" Width="180" DisplayMemberBinding="{Binding AddressHospital}"/>
                            <GridViewColumn Header="Ngày hiến/Đăng ký" Width="120" DisplayMemberBinding="{Binding DisplayDate}"/>
                            <GridViewColumn Header="Ngày đăng ký" Width="90" DisplayMemberBinding="{Binding RegistrationDate}"/>
                            <GridViewColumn Header="Trạng thái" Width="100" DisplayMemberBinding="{Binding Status}"/>
                            <GridViewColumn Header="Ngày hoàn thành" Width="120" DisplayMemberBinding="{Binding DateCompleteDonation}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Hủy đăng ký" Width="110" Height="34" Click="CancelButton_Click"/>
                    <Button Content="Đóng" Width="80" Height="34" Click="CloseButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window> 