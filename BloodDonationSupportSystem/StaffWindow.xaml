<Window x:Class="BloodDonationSupportSystem.StaffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Staff" Height="200" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Welcome, Staff!" FontSize="24" Margin="0,0,0,20"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <Button Content="Quản lí đơn hiến máu" Width="150" Height="38" Margin="0,0,8,0" Click="ManageDonationsButton_Click"/>
                <Button Content="Quản lí lịch hiến máu" Width="150" Height="38" Margin="0,0,8,0" Click="ManageSchedulesButton_Click"/>
                <Button Content="Quản lí kho máu" Width="150" Height="38" Click="ManageInventoryButton_Click"/>
            </StackPanel>
            <Button Content="Đăng xuất" Width="120" Height="35" Click="LogoutButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 