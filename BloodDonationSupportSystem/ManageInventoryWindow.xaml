<Window x:Class="BloodDonationSupportSystem.ManageInventoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lí kho máu" Height="400" Width="700" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Background="#f5f6fa" Margin="10">
        <StackPanel>
            <TextBlock Text="Quản lí kho máu" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,18"/>
            <TextBlock Text="Bảng kho máu" FontWeight="Bold" Margin="0,0,0,6"/>
            <ListView x:Name="BloodInventoryListView" Height="120" Margin="0,0,0,12">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Mã nhóm máu" Width="120" DisplayMemberBinding="{Binding BloodTypeId}"/>
                        <GridViewColumn Header="Tổng thể tích (ml)" Width="150" DisplayMemberBinding="{Binding TotalVolumeMl}"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <TextBlock Text="Bảng các lần lấy máu (process)" FontWeight="Bold" Margin="0,12,0,6"/>
            <ListView x:Name="ProcessListView" Height="120" MouseDoubleClick="ProcessListView_MouseDoubleClick">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Mã quy trình" Width="120" DisplayMemberBinding="{Binding DonationProcessId}"/>
                        <GridViewColumn Header="Kết quả xét nghiệm" Width="120" DisplayMemberBinding="{Binding BloodTest}"/>
                        <GridViewColumn Header="Thể tích (ml)" Width="100" DisplayMemberBinding="{Binding VolumeMl}"/>
                        <GridViewColumn Header="Trạng thái" Width="120" DisplayMemberBinding="{Binding Status}"/>
                        <GridViewColumn Header="Mã nhóm máu" Width="90" DisplayMemberBinding="{Binding BloodTypeId}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Window> 