<Window x:Class="BloodDonationSupportSystem.DonationListDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đơn hiến máu" Height="350" Width="500" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid Background="#f5f6fa">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="500">
            <TextBlock Text="Đơn hiến máu chờ duyệt" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,24"/>
            <ListView x:Name="PendingListView" Height="180" SelectionMode="Single" Margin="0,0,0,12">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Họ tên" Width="120" DisplayMemberBinding="{Binding Donor.FullName}"/>
                        <GridViewColumn Header="SĐT" Width="100" DisplayMemberBinding="{Binding Donor.PhoneNumber}"/>
                        <GridViewColumn Header="Bệnh viện" Width="120" DisplayMemberBinding="{Binding BloodDonationSchedule.AddressHospital}"/>
                        <GridViewColumn Header="Ngày hiến" Width="90" DisplayMemberBinding="{Binding BloodDonationSchedule.DonationDate}"/>
                        <GridViewColumn Header="Ngày đăng ký" Width="90" DisplayMemberBinding="{Binding RegistrationDate}"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,12">
                <Button Content="Chấp nhận" Width="100" Height="34" Margin="0,0,8,0" Click="AcceptButton_Click"/>
                <Button Content="Hủy" Width="80" Height="34" Click="CancelButton_Click"/>
            </StackPanel>
            <Button Content="Quay lại" Height="36" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 