<Window x:Class="BloodDonationSupportSystem.HealthCheckDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kiểm tra sức khỏe" Height="400" Width="700" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid Background="#f5f6fa">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="650">
            <TextBlock Text="Danh sách đơn đã chấp nhận chờ kiểm tra sức khỏe" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,24"/>
            <ListView x:Name="AcceptedListView" Height="220" SelectionMode="Single" Margin="0,0,0,12">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Họ tên" Width="120" DisplayMemberBinding="{Binding Donor.FullName}"/>
                        <GridViewColumn Header="SĐT" Width="100" DisplayMemberBinding="{Binding Donor.PhoneNumber}"/>
                        <GridViewColumn Header="Bệnh viện" Width="120" DisplayMemberBinding="{Binding BloodDonationSchedule.AddressHospital}"/>
                        <GridViewColumn Header="Ngày hiến" Width="90" DisplayMemberBinding="{Binding BloodDonationSchedule.DonationDate}"/>
                        <GridViewColumn Header="Ngày đăng ký" Width="90" DisplayMemberBinding="{Binding RegistrationDate}"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,12">
                <Button Content="Nhập thông tin sức khỏe" Width="180" Height="34" Margin="0,0,8,0" Click="InputHealthInfoButton_Click"/>
                <Button Content="Quay lại" Height="34" Click="BackButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window> 