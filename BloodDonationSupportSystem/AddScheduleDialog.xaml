<Window x:Class="BloodDonationSupportSystem.AddScheduleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm lịch hiến máu" Height="520" Width="350" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid Background="#f5f6fa">
        <Border CornerRadius="12" Background="White" Padding="24" Margin="18">
            <StackPanel>
                <TextBlock Text="Thêm lịch hiến máu mới" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,18"/>
                <TextBlock Text="Bệnh viện"/>
                <TextBox x:Name="AddressHospitalTextBox" Height="28" Margin="0,0,0,10"/>
                <TextBlock Text="Ngày hiến máu"/>
                <DatePicker x:Name="DonationDatePicker" Height="28" Margin="0,0,0,10"/>
                <TextBlock Text="Giờ bắt đầu"/>
                <TextBox x:Name="StartTimeTextBox" Height="28" Margin="0,0,0,10"/>
                <TextBlock Text="Giờ kết thúc"/>
                <TextBox x:Name="EndTimeTextBox" Height="28" Margin="0,0,0,18"/>
                <TextBlock Text="Số lượng người đăng ký"/>
                <TextBox x:Name="AmountRegistrationTextBox" Height="28" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Lưu" Width="80" Height="32" Click="SaveButton_Click"/>
                    <Button Content="Hủy" Width="80" Height="32" Click="CancelButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window> 